<div class="col-lg-8 col-sm-8 col-xs-8 col-md-offset-2">
    <md-card class="md-transparent">
        <md-card-content>
            <div class="p-data clearfix">
										<span class="pull-left">
											{{ order.created_at }}
										</span>
                <span class="pull-right">
											<b>${{ order.total_price }}</b>
										</span>
            </div>

            <!--                            Order statsus-->
            <div class="order_status">
                <p></p>
                <div class="md-stepper md-theme-default">
                    <nav class="md-whiteframe md-steps-navigation md-whiteframe-1dp">
                        <div class="md-steps-navigation-container">
                            <div class="md-step-header md-active">
                                <div class="md-step-icons"><!---->
                                    <div class="md-step-number">
                                                        <span>
                                                            <i class="fa fa-check" aria-hidden="true"></i>
                                                        </span>
                                    </div>
                                </div>
                                <div class="md-step-titles">
                                    <div class="md-step-title">Order Received</div> <!---->
                                </div> <!---->
                            </div>
                            <hr class="md-divider">
                            <div class="md-step-header"
                                 :class="[order.status > 0 ? 'md-active' : '']">
                                <div class="md-step-icons"><!---->
                                    <div class="md-step-number">
                                                        <span>
                                                            <i v-if="order.status > 0"
                                                               class="fa fa-check"
                                                               aria-hidden="true"></i>
                                                           <i v-if="order.status <= 0"
                                                              class="fa fa-spinner"
                                                              aria-hidden="true"></i>
                                                        </span>
                                    </div>
                                </div>
                                <div class="md-step-titles">
                                    <div class="md-step-title">On Shipping</div> <!---->
                                </div> <!----></div>
                            <hr class="md-divider">
                            <div class="md-step-header"
                                 :class="[order.status > 1 ? 'md-active' : '']">
                                <div class="md-step-icons"><!---->
                                    <div class="md-step-number">
                                                        <span>
                                                            <i v-if="order.status > 1"
                                                               class="fa fa-check"
                                                               aria-hidden="true"></i>
                                                            <i v-if="order.status <= 1"
                                                               class="fa fa-spinner" aria-hidden="true"></i>
                                                        </span>
                                    </div>
                                </div>
                                <div class="md-step-titles">
                                    <div class="md-step-title">Order Delivered</div> <!---->
                                </div> <!---->
                            </div>
                        </div>
                    </nav>
                </div>
            </div>

            <div class="customer_detail">
                <p style="margin-top:20px;font-weight:900;" class="trach_h">Customer Details</p>
                <div class="row">
                    <div class="col-lg-4 col-sm-4">
                        <b>Full name: </b>
                        {{ order.customer_detail.full_name }}
                    </div>
                    <div class="col-lg-8 col-sm-8">
                        <b>Email/phone: </b>
                        {{ order.customer_detail.email }} /
                        {{ order.customer_detail.phone_number }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 col-sm-8">
                        <b>Billing address:</b>
                        {{ order.customer_detail.address }}
                    </div>
                </div>
            </div>

            <div class="order_detail">
                <p style="margin-top:20px;font-weight:900;" class="trach_h">Order details</p>
            </div>
            <md-table>
                <md-table-header>
                    <md-table-head>Product</md-table-head>
                    <md-table-head>Color</md-table-head>
                    <md-table-head>Size</md-table-head>
                    <md-table-head>Quantity</md-table-head>
                    <md-table-head>Total</md-table-head>
                </md-table-header>

                <md-table-body>
                    <md-table-row v-for="(item, index) in order.items"
                                  :key="index">
                        <md-table-cell>{{ item.name }}</md-table-cell>
                        <md-table-cell>{{ item.color }}</md-table-cell>
                        <md-table-cell>{{ item.size }}</md-table-cell>
                        <md-table-cell>{{ item.quantity }}</md-table-cell>
                        <md-table-cell>{{ item.total }}</md-table-cell>
                    </md-table-row>
                </md-table-body>
            </md-table>
        </md-card-content>

        <md-card-actions>
            <md-button class="md-primary md-raised"
                       @click="continueTrack">
                Another Tracking
            </md-button>
        </md-card-actions>
    </md-card>
</div>